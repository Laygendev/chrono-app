{
  "name": "chrono-app",
  "productName": "Chronomate",
  "version": "1.0.1",
  "description": "Application de chronom√®tres multiples avec Electron, React et Google Sheets",
  "main": "main.js",
  "author": "Jimmy Le Boss",
  "license": "MIT",
  "scripts": {
    "react": "cd src && npm start",
    "electron": "wait-on http://localhost:3000 && electron .",
    "start": "concurrently -k -n \"REACT,ELECTRON\" -c \"cyan,magenta\" \"npm run react\" \"npm run electron\"",
    "react:build": "cd src && npm install && npm run build",
    "electron:build": "npm run react:build && electron-builder",
    "build": "cd src && npm run build",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "electron-log": "^5.3.3",
    "google-auth-library": "^9.0.0",
    "googleapis": "^128.0.0",
    "lowdb": "^7.0.1",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^35.1.2",
    "electron-builder": "^24.13.3",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.laygendev.chronoapp",
    "productName": "Chronomate",
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "icons/mac_icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "main.js",
      "config.json",
      "preload.js",
      "token.json",
      "projets.json",
      "auth.js",
      "get-token.js",
      "store.js",
      {
        "from": "src/build",
        "to": "build",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
